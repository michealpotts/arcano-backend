{
  "name": "backend",
  "version": "1.0.0",
  "description": "GalaChain blockchain game backend API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["galachain", "blockchain", "game", "backend"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "typeorm": "^0.3.17",
    "mysql2": "^3.6.5",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.1.14",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "@galachain/web3-sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
}
